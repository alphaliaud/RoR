<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mt-8" style="margin: 0 auto; max-width: 450px;margin-top:40px !important">

  <h2 class="text-center mb-4">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'w-full max-w-xs') do |f| %>
      <div class="field md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :email, :class => 'block text-grey font-bold md:text-right mb-1 md:mb-0 pr-4' %><br />
        </div>
        <div class="md:w-1/3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'bg-grey-lighter appearance-none border-2 border-grey-lighter border-grey rounded w-full py-1 px-4 text-grey-darker leading-tight' %>
        </div>
      </div>

      <div class="field md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :password, :class => 'block text-grey font-bold md:text-right mb-1 md:mb-0 pr-4' %><br />
        </div>
        <div class="md:w-1/3">
          <%= f.password_field :password, autocomplete: "off", :class => 'bg-grey-lighter appearance-none border-2 border-grey-lighter border-grey rounded w-full py-1 px-4 text-grey-darker leading-tight' %>
        </div>
      </div>

      <div class="md:flex md:items-center text-center">
        <div class="actions md:w-full">
          <%= f.submit "Log in", :class => 'shadow btn-color text-white font-bold py-2 px-4 rounded' %>
        </div>
      </div>

  <% end %>

</div>

