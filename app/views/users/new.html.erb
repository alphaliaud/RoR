<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mt-8" style="margin: 0 auto; max-width: 450px;margin-top:40px !important">

  <h2 class="text-center mb-4">New User</h2>

  <%= link_to 'Back', users_path %>

    <div class="flex bg-blur-custom p-6 ">
      <%= form_for @user do |f| %>
          <%- {
                  first_name: :text,
                  last_name: :text,
                  password: :password,
                  email: :email,
                  phone_number: :text,
                  date_of_birth: :date
              }.each do |attr, type|
          %>
              <div class="field md:flex md:items-center mb-6">
                <div class="md:w-1/3">
                <%= f.label attr, :class => 'block text-grey font-bold md:text-right mb-1 md:mb-0 pr-4'%>
                </div>
                <div class="md:w-1/3">
                  <%= f.send "#{type}_field", attr, class: "form-control bg-grey-lighter appearance-none border-2 border-grey-lighter border-grey rounded py-1 px-4 text-grey-darker leading-tight" %>
                </div>
              </div>
                <%- if @user.errors[attr].present? %>
                  <div class="field md:flex md:items-center mb-6">
                    <div class="md:w-1/3">
                      <%= @user.errors[attr].to_sentence %>
                    </div>
                  </div>
                <%- end %>

          <%- end %>
          <div class="md:flex md:items-center text-center">
            <div class="actions md:w-full">
              <input type="submit" class="shadow btn-color text-white font-bold py-2 px-4 rounded">
            </div>
          </div>
      <% end %>
    </div>
    <div class="mt-2 flex w-full text-center bg-blur-custom mb-2 justify-between">
      <%= link_to users_path(), :class => "flex justify-center items-center text-white p-25 return" do %>
          <i class="fas fa-arrow-left"></i>
      <% end %>

    </div>
</div>
